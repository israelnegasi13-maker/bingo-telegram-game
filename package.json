{
  "name": "bingo-elite-telegram",
  "version": "2.0.0",
  "description": "Real-time multiplayer Bingo game for Telegram Mini App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "bot": "node bot.js",
    "dev": "nodemon server.js",
    "dev:bot": "nodemon bot.js",
    "all": "concurrently \"npm run start\" \"npm run bot\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:bot\"",
    "test": "echo \"No tests specified\" && exit 0",
    "heroku-postbuild": "echo \"No build required\""
  },
  "keywords": [
    "bingo",
    "telegram",
    "mini-app",
    "game",
    "realtime",
    "multiplayer"
  ],
  "author": "Bingo Elite",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "telegraf": "^4.15.3",
    "concurrently": "^8.2.2",
    "luxon": "^3.3.0",
    "chart.js": "^4.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
